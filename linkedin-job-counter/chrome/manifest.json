{
  "manifest_version": 3,
  "name": "LinkedIn Job Insights",
  "version": "1.0.0",
  "description": "Reveals the true number of job applicants and views for LinkedIn job postings",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.linkedin.com/*"],
    "js": ["utils.js", "ui-injector.js", "content-simple.js"],
    "css": ["styles.css"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["styles.css"],
    "matches": ["*://*.linkedin.com/*"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Show LinkedIn Job Insights"
  }
}
